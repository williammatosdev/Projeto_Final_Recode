@{
	ViewData["Title"] = "Login";
}
<div class="row justify-content-center">
	<div class="col-md-4 text-xl-center">
		<form asp-controller="Login" asp-action="Logar" method="post">
			<div class="form-group">
				<label class="col-form-label"><b>Email</b></label>
				<input class="form-control" type="text" name="email"></>
			</div>

			<div class="form-group">
				<label class="col-form-label"><b>Senha</b></label>
				<input class="form-control" type="password" name="senha"></>
			</div>

			<div class="form-group">
				<input type="submit" class="btn btn-primary form-control" value="Log in"></>
			</div>
		</form>
	</div>
</div>